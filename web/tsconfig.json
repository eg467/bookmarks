{
   "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "esnext",
      "target": "es5",
      "downlevelIteration": true,
      "importHelpers": true,
      "moduleResolution": "node", // For async error (2354)
      "allowJs": true,
      "sourceMap": true,
      "lib": ["es2015", "dom"],
      "resolveJsonModule": true,
      "esModuleInterop": true
   }
}